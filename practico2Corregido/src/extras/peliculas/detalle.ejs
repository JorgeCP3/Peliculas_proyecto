<%- include('../../components/header.ejs') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <img src="/images/imgPeliculas/<%= pelicula.id %>.jpg" class="img-fluid" alt="<%= pelicula.nombre %>">
    </div>
    <div class="col-md-6">
      <h2><%= pelicula.nombre %></h2>
      <p><%= pelicula.sinopsis %></p>
      <p><strong>Fecha de Lanzamiento:</strong> <%= pelicula.fecha_lanzamiento.toDateString() %></p>
      <p><strong>Calificación en Rotten Tomatoes:</strong> <%= pelicula.calificacion_rotten_tomatoes %>%</p>
      <a href="<%= pelicula.trailer_url %>" class="btn btn-primary" target="_blank">Ver Tráiler</a>
    </div>
  </div>
</div>

<%- include('../../components/footer.ejs') %>
